<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/FondoRojo"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.eduardopalacios.buscadoryoutube.MainActivity">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icono2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:id="@+id/ETBuscar"
            android:hint="Buscar"
            android:paddingLeft="30dp"
            android:background="@drawable/disenio_edittext"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:id="@+id/botonBuscar"
            android:onClick="onClickButton"
            android:backgroundTint="#dedcdc"
            android:background="@drawable/disenio_boton"
            android:foreground="@drawable/ic_action_search"
            android:foregroundGravity="center"
            android:textColor="#b1aeae" />
    </LinearLayout>

</LinearLayout>
